<UserControl x:Class="Playstation.WPF.Controls.TarrifControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Playstation.WPF.Controls"
             mc:Ignorable="d" 
             Loaded="UserControl_Loaded"
             d:DesignHeight="550" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Button
            x:Name="create_tarrif_btn"
            Grid.Row="0"
            Height="50"
            Width="190"
            Background="DarkGreen"
            HorizontalAlignment="Left"
            Margin="10"
            Content="создать тариф"
            FontSize="22"
            Click="create_tarrif_btn_Click"
            />
        <Grid
            Grid.Row="1"
            >
            <DataGrid 
                x:Name="tarrif_datagrid"
                HorizontalGridLinesBrush="DarkGray"
                RowBackground="LightGray"
                AlternatingRowBackground="White"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                FontSize="15"
                VerticalAlignment="Center"
                      Height="500"
                      Margin="10 15 10 10" 
                      BorderThickness="1"
                      BorderBrush="Black" >
                <DataGrid.Columns>
                    <DataGridTextColumn  Binding="{Binding Id}" Header="Код" Width="80" />
                    <DataGridTextColumn Binding="{Binding Title}" Header="Название тарифа" Width="170" />
                    <DataGridTextColumn Binding="{Binding TarrifType}" Header="Тип тарифа" Width="100" />
                    <DataGridTextColumn Binding="{Binding Amount}" Header="Тарифная цена" Width="150" />
                    <DataGridTextColumn Binding="{Binding TotalMinutes}" Header="Тарифное время" Width="150" />
                    <DataGridTemplateColumn Header="Действие" Width="400">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel
                                    Orientation="Horizontal"
                                    Margin="0 10 0 0 ">
                                    <Button x:Name="Delete_btn"
                                          Margin="0 0 10 0"
                                            Height="35"
                                            Click="Delete_btn_Click"
                                            md:ShadowAssist.ShadowDepth="Depth4"
                                            Background="#F93E3E"
                                            md:ButtonAssist.CornerRadius="10"
                                            BorderThickness="0.1">
                                        <StackPanel Orientation="Horizontal">
                                            <md:PackIcon 
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Left"
                                                Kind="Trash"
                                                Foreground="#10bce3"
                                                Height="25"
                                                Margin="5"
                                                Width="25"/>
                                            <TextBlock  Text="Delete"
                                                        VerticalAlignment="Center"
                                                        Height="30"
                                                        Foreground=" Black"
                                                        Opacity="0.7"
                                                                                                                FontSize="18"
                                                        />
                                        </StackPanel>
                                    </Button>

                                    <Button x:Name="Edit_btn"
                                            Click="Edit_btn_Click"
                                           Margin="0 0 10 0"
                                            Height="35"
                                            md:ShadowAssist.ShadowDepth="Depth4"
                                            Background="#FCA130"
                                            md:ButtonAssist.CornerRadius="10"
                                            BorderThickness="0.1">
                                        <StackPanel Orientation="Horizontal">
                                            <md:PackIcon 
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Left"
                                                Kind="Pen"
                                                Foreground="#1d50d1"
                                                Height="30"
                                                Margin="5"
                                                Width="30"/>
                                            <TextBlock  Text="Edit"
                                                        Height="30"
                                                        VerticalAlignment="Center"
                                                        Foreground=" Black"
                                                        Opacity="0.7"
                                                        
                                                                                                                FontSize="18" 
                                                       />
                                        </StackPanel>
                                    </Button>

                                    
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>


                </DataGrid.Columns>

            </DataGrid>
